{
  "name": "swagger-generator",
  "version": "1.0.0",
  "description": "Demo for bug in swagger-autogen lib",
  "main": "index.ts",
  "scripts": {
    "dev": "nodemon",
    "commit": "commit",
    "lint": "tslint -p .",
    "test": "jest --watchAll",
    "test:debug": "DEBUG=nock.* jest --watchAll",
    "prettify": "prettier --write ./src/**/*.{ts}",
    "build": "tsc -p tsconfig.build.json && tspath -f",
    "start": "npm run setup && node dist/src/index.js",
    "setup": "npm run clean && npm install && npm run review",
    "swagger": "npm run build && node dist/src/config/swagger.js",
    "review": "cross-env CI=true && npm run lint && npm run build",
    "clean": "find . -name 'node_modules' -exec rm -rf '{}' +; find . -name 'package-lock.json' -exec rm -rf '{}' +; find . -name 'dist' -exec rm -rf '{}' +"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eduardo-fernandes-marques/swagger-generator.git"
  },
  "author": "Eduardo Fernandes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eduardo-fernandes-marques/swagger-generator/issues"
  },
  "homepage": "https://github.com/eduardo-fernandes-marques/swagger-generator#readme",
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "collectCoverage": true,
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test.config.js"
    ],
    "moduleNameMapper": {
      "~(.*)$": "<rootDir>/$1",
      "#(.*)$": "<rootDir>/src/$1"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/app.ts",
      "<rootDir>/src/utils/",
      "<rootDir>/src/middlewares/logger.middleware.ts",
      "<rootDir>/src/middlewares/tracer.middleware.ts"
    ]
  },
  "nodemonConfig": {
    "ext": "ts",
    "watch": [
      "src"
    ],
    "ignore": [
      "node_modules",
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run prettify && npm run lint"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.0",
    "express": "^4.17.1",
    "got": "^11.8.2",
    "joi": "^17.3.0",
    "swagger-autogen": "^2.7.1",
    "swagger-ui-express": "^4.1.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/prompt-cli": "^8.3.5",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/jest": "^26.0.20",
    "@types/request": "^2.48.5",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.2.11",
    "nock": "^13.0.9",
    "nodemon": "^2.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.0.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tspath": "^1.3.7",
    "typescript": "^4.2.3"
  }
}
